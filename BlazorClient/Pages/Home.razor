@page "/"
@page "/{PageSize:int}/{PageNumber:int}"

<BlazorClient.Components.PagesComponents.Headerer />
<BlazorClient.Components.PagesComponents.GameMenu />

@if (Games is null)
{
    <p>Loading...</p>
}
else
{
    foreach (var game in Games)
    {
        <BlazorClient.Components.PagesComponents.Game Id="@game.Id"
                                                      Name="@game.Name"
                                                      Description="@game.Description"
                                                      Developers="@game.Developers"
                                                      Genres="@game.Genres"
                                                      Href="@game.Href"
                                                      Image="@game.Image"
                                                      Localization="@game.Localization"
                                                      Platforms="@game.Platforms"
                                                      Publisher="@game.Publisher"
                                                      ReleaseDate="@game.ReleaseDate"
                                                      Score="@game.Score"
                                                      ScoresCount="@game.ScoresCount" />
    }
    @if (PageNumber > 1)
    {
        <a href="/@(PageSize)/@(PageNumber-1)">Пред.</a>
    }
    @if (Games.Count() == PageSize)
    {
        <a href="/@(PageSize)/@(PageNumber+1)">След.</a>
    }
}