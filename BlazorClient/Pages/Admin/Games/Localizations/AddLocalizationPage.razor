@page "/admin/games/localizations/add-localization"

<AuthorizeView Policy="Admin">
    <Authorized>
        <EditForm OnValidSubmit="AddLocalizationAsync" Context="myContext">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <InputText @bind-Value="AddLocalizationModel.Name" />
            <input type="submit" value="Добавить" />
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы добавить локализацию
    </NotAuthorized>
</AuthorizeView>