@page "/admin/games/genres/remove-genre/{Id:long}"

<AuthorizeView Policy="Admin">
    <Authorized>
        @if (Genre is null)
        {
            <p>Загружается...</p>
        }
        else
        {
            <h3>Удалить @Genre.Name</h3>
            <p>Вы уверены, что хотите удалить этот жанр?</p>
            <p>
                <button type="button" @onclick="RemoveGenreAsync">Удалить</button>
            </p>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы удалить жанр
    </NotAuthorized>
</AuthorizeView>