@page "/admin/games/genres/add-genre"

<AuthorizeView Policy="Admin">
    <Authorized>
        <EditForm OnValidSubmit="AddGenreAsync" Context="myContext">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <InputText @bind-Value="AddGenreModel.Name" />
            <input type="submit" value="Добавить" />
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы добавить жанр
    </NotAuthorized>
</AuthorizeView>