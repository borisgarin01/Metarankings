@page "/admin/games/developers/add-developer"

<AuthorizeView Policy="Admin">
    <Authorized>
        <EditForm Model="AddDeveloperModel" OnValidSubmit="AddDeveloperAsync" Context="myContext">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <InputText @bind-Value="AddDeveloperModel.Name" />
            <input type="submit" value="Добавить" />
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы добавить разраба
    </NotAuthorized>
</AuthorizeView>
