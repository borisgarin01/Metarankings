@page "/admin/Games/platforms/add-platform"

<AuthorizeView Policy="Admin">
    <Authorized>
        <EditForm Model="AddPlatformModel" OnValidSubmit="AddPlatformAsync" Context="myContext">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <InputText @bind-Value="AddPlatformModel.Name" />
            <input type="submit" value="Добавить" />
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы добавить платформу
    </NotAuthorized>
</AuthorizeView>
