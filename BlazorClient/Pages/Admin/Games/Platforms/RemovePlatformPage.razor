@page "/admin/games/platforms/remove-platform/{Id:long}"

<AuthorizeView Policy="Admin">
    <Authorized>
        @if (Platform is null)
        {
            <p>Загружается...</p>
        }
        else
        {
            <h3>Удалить @Platform.Name</h3>
            <p>Вы уверены, что хотите удалить эту платформу?</p>
            <p>
                <button type="button" @onclick="RemovePlatformAsync">Удалить</button>
            </p>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы удалить платформу
    </NotAuthorized>
</AuthorizeView>