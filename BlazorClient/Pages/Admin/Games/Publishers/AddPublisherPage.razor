@page "/admin/games/publishers/add-publisher"

<AuthorizeView Policy="Admin">
    <Authorized>
        <EditForm Model="AddPublisherModel" OnValidSubmit="AddPublisherAsync" Context="myContext">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <InputText @bind-Value="AddPublisherModel.Name" />
            <input type="submit" value="Добавить" />
        </EditForm>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы добавить издателя
    </NotAuthorized>
</AuthorizeView>
