@page "/admin/Games/publishers/list-publishers"

@using Domain.Games

<AuthorizeView Policy="Admin">
    <Authorized>
        <a href="/admin/Games/publishers/add-publisher">Добавить издателя</a>
        <div class="publishersList">
            @if (Publishers is null)
            {
                <p>Загружается...</p>
            }
            else
            {
                foreach (Publisher publisher in Publishers)
                {
                    <div class="publisher">
                        <h4>@publisher.Name</h4>
                        <a href="/admin/Games/publishers/remove-publisher/@publisher.Id">Remove publisher</a>
                    </div>
                }
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a>, чтобы добавить издателя
    </NotAuthorized>
</AuthorizeView>
