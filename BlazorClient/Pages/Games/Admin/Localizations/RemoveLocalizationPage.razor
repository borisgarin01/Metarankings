@page "/admin/localizations/remove-localization/{Id:long}"

<AuthorizeView Policy="Admin">
    <Authorized>
        @if (Localization is null)
        {
            <p>Загружается...</p>
        }
        else
        {
            <h3>Удалить @Localization.Name</h3>
            <p>Вы уверены, что хотете удалить эту локализацию?</p>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы удалить локализацию
    </NotAuthorized>
</AuthorizeView>