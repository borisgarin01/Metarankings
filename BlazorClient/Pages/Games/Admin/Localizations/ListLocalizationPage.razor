@page "/admin/localizations/list-localizations"
@using Domain.Games

<AuthorizeView Policy="Admin">
    <Authorized>
        <a href="/admin/localizations/add-localization">Добавить локализацию</a>
        <div class="localizationsList">
            @foreach (Localization localization in Localizations)
            {
                <div class="localization">
                    <h4>@localization.Name</h4>
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a>, чтобы добавить разраба
    </NotAuthorized>
</AuthorizeView>
