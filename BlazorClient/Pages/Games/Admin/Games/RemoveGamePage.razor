@page "/admin/games/remove-game/{Id:long}"

<AuthorizeView Policy="Admin">
    <Authorized>
        @if (Game is null)
        {
            <p>Загружается...</p>
        }
        else
        {
            <h3>Удалить @Game.Name</h3>
            <p>Вы уверены, что хотете удалить эту игру?</p>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы удалить игру
    </NotAuthorized>
</AuthorizeView>