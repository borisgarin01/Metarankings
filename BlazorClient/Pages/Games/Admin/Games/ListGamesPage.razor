@page "/admin/games/list-games"
@using Domain.Games

<AuthorizeView Policy="Admin">
    <Authorized>
        <a href="/admin/games/add-game">Добавить игру</a>
        <div class="gamesList">
            @if (Games is null)
            {
                <p>Загружается...</p>
            }
            else
            {
                foreach (Game game in Games)
                {
                    <div class="game">
                        <h4>@game.Name</h4>
                        <a href="/admin/games/remove-game/@game.Id">Remove game</a>
                        <a href="/games/Details/@game.Id">Details</a>
                    </div>
                }
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a>, чтобы добавить игру
    </NotAuthorized>
</AuthorizeView>
