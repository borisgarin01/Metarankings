@page "/admin/developers/list-developers"
@using Domain.Games

<AuthorizeView Policy="Admin">
    <Authorized>
        <a href="/admin/developers/add-developer">Добавить разраба</a>
        <div class="developersList">
            @if (Developers is null)
            {
                <p>Loading...</p>
            }
            else
            {
                foreach (Developer developer in Developers)
                {
                    <div class="developer">
                        <h4>@developer.Name</h4>
                    </div>
                }
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a>, чтобы добавить разраба
    </NotAuthorized>
</AuthorizeView>
