@page "/admin/genres/add-genre"

<AuthorizeView Policy="Admin">
    <Authorized>
        <InputText @bind-Value="AddGenreModel.Name" />
        <input type="submit" value="Добавить" @onclick="AddGenreAsync" />
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a>, чтобы добавить жанр
    </NotAuthorized>
</AuthorizeView>