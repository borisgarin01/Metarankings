@page "/admin/platforms/remove-platform/{Id:long}"

<AuthorizeView Policy="Admin">
    <Authorized>
        @if (Platform is null)
        {
            <p>Загружается...</p>
        }
        else
        {
            <h3>Удалить @Platform.Name</h3>
            <p>Вы уверены, что хотете удалить эту платформу?</p>
        }
    </Authorized>
    <NotAuthorized>
        <a href="/auth/login">Авторизируйся</a> или <a href="/auth/register">Зарегистрируйся</a> админом, чтобы удалить платформу
    </NotAuthorized>
</AuthorizeView>