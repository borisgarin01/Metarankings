@using System.Globalization
@inject HttpClient HttpClient

<div class="thumb">
    <img class="post-image" src="@($"{HttpClient.BaseAddress}api/{Prefix}/images/{ReleaseYear}/{ReleaseMonth}/{ImageSource}")" alt="@Name" title="@Name" itemprop="image">

    <div class="best-prod">
        <span class="star">★</span> Лучшие в @ReleaseYear году
        <span class="inform">?</span>
    </div>


    <div class="watch-trailer">
        <h3><span class="twatch"><span class="p-twatch">Смотреть трейлер</span></span></h3>
    </div>
</div>